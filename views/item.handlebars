<h2>Edit Item</h2>

<div class="row justify-content-lg-center">


    
<div class="col-lg-4 col-md-4 col-sm-6">
    <div class="card card-stats">
        <div class="card-header card-header-info card-header-icon">
            <div class="card-icon">
                <image src="../{{item.itemImage}}" style="width: 350px;"/>
                        
            </div>
            <h2 style="color: black;">{{item.itemName}}</h2><h3 style="color: #afafaf;">${{item.price}}.00</h3>
            
        </div>
        
        <div class="card-footer">
             
            <p class="card-category">{{item.description}}</p>
            {{#ifCond 1 item.amount}}
                    <p><i class="material-icons">check_box</i> In Stock </p>
            {{/ifCond}}          
        </div>
        
        <div class="card-footer ">
            <form action="/items/{{item.id}}?_method=PUT" method="GET">
            <div class="card-footer text-center">
         
          <button type="submit" class="btn btn-success">Edit Item</button>
        </div>
        </form>
        <form action="/items/{{item.id}}?_method=DELETE" method="POST">
            <div class="card-footer text-center">
          <button type="submit" class="btn btn-danger">Delete Item</button>
        </div>
        </form>
        </div>
    
    </div>
  </div>

</div>



